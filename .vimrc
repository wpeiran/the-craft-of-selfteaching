#设置编码
set fileencodings=utf-8,ucs-bom,gb18030,gbk,gb2312,cp936
set termencoding=utf-8
set encoding=utf-8
# 显示行号
set nu
set number

set cursorline
set cul         # cursorline的缩写形式

set cursorcolumn
set cuc        # cursorcolumn的缩写形式

set mouse=a
set selection=exclusive
set selectmode=mouse,key

set showmatch

# 设置Tab长度为4空格
set tabstop=4
# 设置自动缩进长度为4空格
set shiftwidth=4
# 继承前一行的缩进方式，适用于多行注释
set autoindent

set paste

# 总是显示状态栏
set laststatus=2
# 显示光标当前位置
set ruler
